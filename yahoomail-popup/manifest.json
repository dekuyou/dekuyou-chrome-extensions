{
  "manifest_version": 2,
  "name": "Ｙ！メールポップアップ",
  "version": "0.2.8.5",
  "description": "Ｙａｈｏｏ！メールをポップアップで（おまけで未読メッセージ数表示）",
  "background": {
    "scripts": ["background.js"]
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "popup.html"
  },
  "icons": { "48": "mail48.png",
			"128": "mail1291.png" },
  "permissions": ["tabs","http://*.yahoo.co.jp/*"]
}
